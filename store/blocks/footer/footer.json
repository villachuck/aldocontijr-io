{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop",
      "flex-layout.row#footer-4-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children":[
      "newsletter-form"
    ],
    "props":{
      "blockClass": "newsletter"
    }
  },
  "newsletter-form": {
    "children": [
      "rich-text#welcome-newsletter",
      "newsletter-input-email",
      "newsletter-submit"
    ],
    "props":{
      "blockClass": "newsletter"
    }
  },
  "rich-text#welcome-newsletter": {
    "props":{
      "text": "Ingresa tu mail para encontrar lo mejor para los campeones del hogar\n #### Suscríbete",
      "blockClass": "text-newsletter"
    }
  },
  "newsletter-input-email": {
    "props":{
      "placeholderText": "",
      "blockClass": "news-input"
    }
  },
  "newsletter-submit": {
    "props": {
      "submitButtonLabel": "Suscribirme"
    }
  },
  "flex-layout.row#footer-2-desktop": {
    "children": [
      "flex-layout.row#logo-footer",
      "vtex.menu@2.x:menu#guia-compras",
      "vtex.menu@2.x:menu#empresa",
      "vtex.menu@2.x:menu#politicas",
      "flex-layout.col#follow-media"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },
  "flex-layout.row#logo-footer": {
    "children":[
      "image#logo-footer"
    ],
    "props": {
      "blockClass": "logo-footer"
    }
  },
  "image#logo-footer": {
    "props": {
      "src": "https://www.aldoconti-jr.com/arquivos/aldocontijr.logo2.png",
      "link": {
        "url": "#"
      },
      "maxWidth": 180,
      "blockClass": "logo-footer"
    }
  },
  "flex-layout.col#follow-media": {
    "children":[
      "rich-text#follow-us",
      "social-networks"
    ],
    "props":{
      "blockClass": "follow-media"
    }
  },
  "rich-text#follow-us": {
    "props": {
      "text": "Síguenos",
      "blockClass": "title-footer-media"
    }
  },
  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/AldoContiJunior/?fref=ts"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/aldocontijr/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/AldoContiJR"
        }
      ]
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": [
      "image#method1",
      "image#method2",
      "image#method3",
      "image#method4",
      "image#method5",
      "image#method6",
      "image#method7",
      "image#method8",
      "image#method9",
      "image#method10",
      "image#method11",
      "image#method12"
    ],
    "props": {
      "blockClass": "payment-methods-acjr"
    }
  },

  "vtex.menu@2.x:menu#categoria-perre": {
